@using WebsiteBanHang.Models;
@model IEnumerable<SanPham>

<style>
.products-showcase {
    padding: 3rem 1rem;
    background: linear-gradient(to bottom, #f8f9fa, #ffffff);
}

.showcase-header {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
}

.showcase-title {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(45deg, #2193b0, #6dd5ed);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 2px;
}

.showcase-subtitle {
    font-size: 1.1rem;
    color: #6c757d;
    margin-bottom: 2rem;
}

.decorative-line {
    width: 150px;
    height: 4px;
    background: linear-gradient(45deg, #2193b0, #6dd5ed);
    margin: 0 auto;
    border-radius: 2px;
}

.products-container {
    display: grid;
    grid-template-columns: repeat(4, 1fr); /* Thay đổi thành 4 cột cố định */
    gap: 1.5rem; /* Giảm gap một chút để phù hợp với 4 items */
    padding: 1rem;
    max-width: 1400px;
    margin: 0 auto;
}

.product-item {
    position: relative;
    background: #ffffff;
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.4s ease;
    box-shadow: 0 10px 20px rgba(0,0,0,0.05);
    width: 100%; /* Đảm bảo item lấp đầy không gian của nó */
}

.product-item:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0,0,0,0.1);
}

.product-image-wrapper {
    position: relative;
    overflow: hidden;
    aspect-ratio: 4/3;
}

.product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.product-item:hover .product-image {
    transform: scale(1.1);
}

.product-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
        to bottom,
        rgba(0,0,0,0.2),
        rgba(0,0,0,0.8)
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    display: flex;
    align-items: flex-end;
    padding: 1.5rem; /* Giảm padding một chút cho overlay */
}

.product-item:hover .product-overlay {
    opacity: 1;
}

.product-details {
    padding: 1.25rem; /* Điều chỉnh padding cho phù hợp */
    background: #ffffff;
    position: relative;
}

.product-category {
    position: absolute;
    top: -15px;
    right: 15px;
    background: linear-gradient(45deg, #2193b0, #6dd5ed);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem; /* Giảm font-size một chút */
    font-weight: 700;
    box-shadow: 0 4px 10px rgba(33, 147, 176, 0.3);
    letter-spacing: 0.5px;
    text-transform: uppercase;
    animation: pulse 2s infinite;
}

.product-name {
    font-size: 1.1rem; /* Điều chỉnh font-size cho phù hợp */
    font-weight: 600;
    margin: 0.5rem 0;
    color: #333;
}

.product-name a {
    text-decoration: none;
    color: inherit;
    transition: color 0.3s ease;
}

.product-description {
    color: white;
    font-size: 0.85rem; /* Giảm font-size description */
    line-height: 1.5;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.4s ease;
}

.product-item:hover .product-description {
    opacity: 1;
    transform: translateY(0);
}

.view-details {
    display: inline-block;
    margin-top: 0.75rem;
    padding: 0.4rem 0.8rem;
    background: white;
    color: #2193b0;
    text-decoration: none;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    transition: all 0.3s ease;
}

.view-details:hover {
    background: #2193b0;
    color: white;
    transform: translateX(5px);
}

@@media (max-width: 1200px) {
    .products-container {
        grid-template-columns: repeat(2, 1fr); /* 2 cột cho tablet */
    }
}

@@media (max-width: 768px) {
    .showcase-title {
        font-size: 2rem;
    }

    .products-container {
        grid-template-columns: 1fr; /* 1 cột cho mobile */
        gap: 1.5rem;
    }

    .product-details {
        padding: 1rem;
    }

    .product-category {
        font-size: 0.8rem;
        padding: 0.4rem 1rem;
    }
}

@@keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
}

@@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
</style>

<section class="products-showcase">
    <div class="showcase-header">
        <h1 class="showcase-title">@Model.First().LoaiSanPham.TenLoai</h1>
        <p class="showcase-subtitle">Khám phá bộ sưu tập mới nhất của chúng tôi</p>
        <div class="decorative-line"></div>
    </div>

    <div class="products-container">
        @foreach (var item in Model.Take(4))
                //Thay đổi Take(3) thành Take(4) 
                {
            <article class="product-item">
                <div class="product-image-wrapper">
                    <img class="product-image"
                         src="@Url.Content("~/Content/HinhAnhSP/"+item.HinhAnh)"
                         alt="@item.TenSP">
                    <div class="product-overlay">
                        <div class="product-description">
                            @Html.Raw(item.Chitiet)
                            <a href="@Url.RouteUrl("XemChiTiet",new {@id=item.MaSP, @tensp = item.TenSP })"
                               class="view-details">
                                Xem chi tiết →
                            </a>
                        </div>
                    </div>
                </div>
                <div class="product-details">
                    <span class="product-category">Mới</span>
                    <h2 class="product-name">
                        <a href="@Url.RouteUrl("XemChiTiet",new {@id=item.MaSP, @tensp = item.TenSP })">
                            @item.TenSP
                        </a>
                    </h2>
                </div>
            </article>
        }
    </div>
</section>